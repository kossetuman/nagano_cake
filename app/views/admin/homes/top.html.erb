<div class="container">
  <div class="row">
    <p class="guide">注文履歴一覧</p>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to localize(order.created_at), admin_order_path(order.id) %></td>
          <td><%= order.customer.first_name + order.customer.last_name %></td>
          <td><%= order.details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>