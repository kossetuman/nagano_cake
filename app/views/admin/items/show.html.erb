<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col-md-4 mt-5">
       <%= attachment_image_tag @item, :image, size: "200x200", format: 'jpeg', fallback: 'no_image.jpg', class: "img-fluid" %>
    </div>
  <div class="col-md-8 mt-5">
    <div class="item-group mb-2 ">
      <label for="item-name">商品名</label>
        <%= @item.name %></span>
      </div>
    <div class="item-group mb-2">
      <label for="item-introduction">商品説明</label>
        <%= @item.introduction %>
    </div>
    <div class="item-group mb-2">
      <labal for="item-genre">ジャンル</labal>
        <%= @item.genre.name %>
    </div>
    <div class="item-group mb-2">
      <label for="item-price">税込価格(税抜価格)</label>
        <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>) 円
    </div>
    <div class="item-group mb-2">
      <label for="item-status">販売ステータス</label>
        <%= @item.is_active %>
    </div>
    <%= link_to "編集する",  edit_admin_item_path(@item.id), class: "btn btn-success btn-sm" %>
  </div>
  </div>
</div>

