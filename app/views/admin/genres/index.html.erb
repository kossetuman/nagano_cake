<div class="container">
  <h3>ジヤンル一覧追加</h3>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="form-group mt-5">
    <label for="genre_name">ジャンル名</label>
    <%= f. text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-success btn-sm mb-1 ml-4" %>
  </div>
  <% end %>
  <div class="col-5">
  <table class="table table-inverse">
    <thead class="thead-light">
      <tr>
        <th></th>
        <th>
          ジャンル
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm ml-5" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>