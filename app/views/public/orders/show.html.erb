<div class="container">
  <div class="row">
    <p class="guide">注文履歴詳細</p>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <p class="orders-show-p">注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= localize @order.created_at, format: :short %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <p class="orders-show-p">請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%= @order.total_payment + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-1 mb-5">
    <div class="col-md-8">
      <p class="orders-show-p">注文内容</p>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.details.each do |detail| %>
          <tr>
            <td><%= detail.item.name %></td>
            <td><%= detail.tax_included_price %></td>
            <td><%= detail.amount %></td>
            <td><%= detail.tax_included_price * detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
