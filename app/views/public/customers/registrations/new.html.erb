<div class="container">
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= form_with model: resource, url:  new_customer_registration_path(resource) , local: true do |f| %>
      <h2>新規登録</h2>
      <p class="guide">新規会員登録</p>
      <%= render "public/customers/shared/error_messages", resource: resource %>

      <div class="form-group">
        <labal for="name">名前</labal>
        <label for="first-name">(性)</label>
          <%= f.text_field :first_name %>
        <label for="last-name">(名)</label>
          <%= f.text_field :last_name %>
      </div>

      <div class="form-group">
        <label for="name-kana">フリガナ</label>
        <label for="first-name-kana">(セイ)</label>
          <%= f.text_field :first_name_kana %>
        <label for="last-name-kana">(メイ)</label>
          <%= f.text_field :last_name_kana %>
      </div>

      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="box-password">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="box-password-confirm">
        <%= f.label :password_confirmation, "パスワード再確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="sign-up-actions">
        <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
      </div>
    <% end %>
      </div>

<%#= render "public/customers/shared/links" %>
