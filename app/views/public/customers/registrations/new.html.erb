<div class="container">
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= form_with model: resource, url: customer_registration_path, local: true do |f| %>
      <h2>新規登録</h2>
      <p class="guide">新規会員登録</p>
      <%= render "public/customers/shared/error_messages", resource: resource %>

      <table class="customer-registration-table">
        <tr>
          <th class="label-title">名前</th>
          <td><%= f.text_field :first_name,autofocus: true, placeholder: "(性) 山田", class: "field" %></td>
          <td><%= f.text_field :last_name,  placeholder: "(名) 太郎", class: "field" %></td>
        </tr>
      </table>

      <table class="customer-registration-table">
        <tr>
          <th class="label-title">カナ</th>
          <td><%= f.text_field :first_name_kana, placeholder: "(セイ) ヤマダ", class: "field"%></td>
          <td><%= f.text_field :last_name_kana, placeholder: "(メイ) タロウ", class: "field" %></td>
        </tr>
      </table>

      <table class="customer-registration-table">
        <tr>
          <th class="label-title">メールアドレス</th>
          <td><%= f.email_field :email, placeholder: "@sample@example.com", autocomplete: "email", class: "field" %></td>
        </tr>
      </table>

       <table class="customer-registration-table">
         <tr>
           <th class="label-title">郵便番号(ハイフン不要)</th>
           <td><%=f.text_field :postal_code, placeholder: "0000000", class: "field" %></td>
         </tr>
       </table>

       <table class="customer-registration-table">
         <tr>
           <th class="label-title">住所</th>
           <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 46, class: "field" %></td>
         </tr>
       </table>

      <table class="customer-registration-table">
        <tr>
          <th class="label-title">電話番後(ハイフン不要)</th>
          <td><%=f.telephone_field :telephone_number, placeholder: "00000000000", class: "field" %></td>
        </tr>
      </table>

       <table class="customer-registration-table">
         <tr>
           <th class="label-title">パスワード
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br /></th>
            <td><%= f.password_field :password, autocomplete: "new-password", class: "field" %></td>
         </tr>
       </table>

      <table class="customer-registration-table">
        <tr>
          <th class="label-title">パスワード再確認</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %></td>
        </tr>
      </table>

      <div class="sign-up-actions">
        <div class="label-title"></div>
        <%= f.submit "新規登録", class: "btn btn-success btn-sm mb-3" %>
      </div>
    <% end %>
        <p class="guide">既に登録済みのかた</p>
        <div class="session-guide">
          <%= link_to "こちら", new_customer_session_path %> からログインして下さい
        </div>
</div>

<%#= render "public/customers/shared/links" %>
