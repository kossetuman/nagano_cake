<div class="container">
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= form_with model: resource, url: customer_registration_path, local: true do |f| %>
      <h2>新規登録</h2>
      <p class="guide">新規会員登録</p>
      <%= render "public/customers/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "名前", class: "label-title" %>
          <%= f.text_field :first_name,autofocus: true, placeholder: "(性) 山田", class: "field" %>
          <%= f.text_field :last_name,  placeholder: "(名) 太郎", class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :name_kana, "カナ", class: "label-title" %>
          <%= f.text_field :first_name_kana, placeholder: "(セイ) ヤマダ", class: "field"%>
          <%= f.text_field :last_name_kana, placeholder: "(メイ) タロウ", class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "label-title"%>
        <%= f.email_field :email, placeholder: "@sample@example.com", autocomplete: "email", class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフン不要)", class: "label-title" %>
        <%=f.text_field :postal_code, placeholder: "0000000", class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :address, "住所", class: "label-title" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 46, class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :telephone_number, "電話番号(ハイフン不要)", class: "label-title" %>
        <%=f.telephone_field :telephone_number, placeholder: "00000000000", class: "field" %>
      </div>

      <div class="form-group">
        <span class="label-title">
          <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
        </span>
        <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード再確認", class: "label-title" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
      </div>

      <div class="sign-up-actions">
        <div class="label-title"></div>
        <%= f.submit "新規登録", class: "btn btn-success btn-sm mb-3" %>
      </div>
    <% end %>
      </div>

<%#= render "public/customers/shared/links" %>
