<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2>新規登録</h2>
      <p class="guide">会員の方はこちらから新規登録</p>
      <%= render "public/customers/shared/error_messages", resource: resource %>

      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="box-password">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="box-password-confirm">
        <%= f.label :password_confirmation, "パスワード再確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="sign-up-actions">
        <%= f.submit "新規登録", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
      </div>
    </div>

<%= render "public/customers/shared/links" %>
